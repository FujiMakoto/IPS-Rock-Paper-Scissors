<ips:template parameters="$winner, $draw, $moves, $score" />
<div id="ipsLayout_contentWrapper">
	<div class="ipsStyle_center rpsResults" id="ipsLayout_mainArea">
		<!-- Game result -->
		<h1>
			{{if $draw}}
				{lang="rps_you_draw"}
			{{elseif $winner}}
				{lang="rps_you_win"}
			{{else}}
				{lang="rps_you_lose"}
			{{endif}}
		</h1>

		<!-- Moves -->
		<ul class="ipsList_inline">
			<li><h3>{lang="rps_comp_played"} &nbsp;<i class="fa fa-hand-{$moves['computer']}-o"></i></h3></li>
			<li><h3>{lang="rps_you_played"} &nbsp;<i class="fa fa-hand-{$moves['player']}-o"></i></h3></li>
		</ul>

		<!-- Play again? -->
		{{if $draw}}
			<img class="ipsImage ipsImage_thumbnailed" src="http://pixel.pub/i/Gj0roM2.jpg">
		{{elseif $winner}}
			<img class="ipsImage ipsImage_thumbnailed" src="http://pixel.pub/i/8IMrr8C.png">
		{{else}}
			<img class="ipsImage ipsImage_thumbnailed" src="http://pixel.pub/i/oG4LQ45.jpg">
		{{endif}}
		<br> <br>
		<a href="{url='app=rps&module=rps&controller=play'}" class="ipsButton ipsButton_primary">{lang="rps_play_again"}</a>
	</div>

	<div id="ipsLayout_sidebar" class="ipsLayout_sidebarright">
		<aside id="elContextualTools" class="ipsClearfix">
			{template="scoreboard" group="rps" params="$score"}
		</aside>
	</div>
</div>